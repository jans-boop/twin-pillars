---
// CTA component
const {
	title = 'Get started now',
	mode ,
	bg,
	classes
} = Astro.props
---

<div
	class:list={['cta', { [`${classes}`]: classes }, { [`${mode}`]: mode }]}
>
	<div class="cta__body">
		<h2 class="cta__heading" set:html={title} />
	</div>
	<slot />
</div>

<style>
	.cta {
		@apply flex flex-col items-center justify-center rounded border border-neutral-100 p-8 shadow-2xl shadow-neutral-600/20 lg:p-16 dark:border-neutral-800;
	}
	
	/* Dark mode with your blue gradient */
	.cta.dark {
	background: 
		radial-gradient(ellipse, #1c3768 0%, #132546 100%);
}
	
	/* Light mode */
	.cta.light {
		background: linear-gradient(135deg, 
			#eff6ff 0%,    /* 50 */
			#dceafd 25%,   /* 100 */
			#c1dcfc 75%,   /* 200 */
			#96c6fa 100%   /* 300 */
		);
	}
	
	.cta__body {
		@apply flex flex-col items-center text-center w-full;
	}
	
	.cta__heading {
		@apply mb-10 text-pretty text-center text-xl lg:text-2xl w-full;
		color: #edca60;
	}
	
	.cta__text {
		@apply mb-2 max-w-4xl text-lg text-center leading-relaxed mx-auto;
		color: #eff6ff;
	}

</style>