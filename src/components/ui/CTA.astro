---
// CTA component
const {
	title = 'Get started now',
	text = 'Get started today and see the difference for yourself!',
	mode ,
	bg,
	classes
} = Astro.props
---

<div
	class:list={['cta', { [`${classes}`]: classes }, { [`${mode}`]: mode }]}
>
	<div class="cta__body">
		<h2 class="cta__heading" set:html={title} />
		<p class="cta__text" set:html={text} />
	</div>
	<slot />
</div>

<style>
	.cta {
		@apply flex flex-col items-center justify-center gap-8 rounded border border-neutral-100 p-8 shadow-2xl shadow-neutral-600/20 lg:p-16 dark:border-neutral-800;
	}
	
	/* Dark mode with your blue gradient */
	.cta.dark {
	background: 
		radial-gradient(circle at 30% 70%, rgba(65, 133, 240, 0.15) 0%, transparent 50%),
		radial-gradient(circle at 70% 30%, rgba(150, 198, 250, 0.1) 0%, transparent 50%),
		linear-gradient(155deg, #192752 0%, #213d87 30%, #203f9e 70%, #203574 100%);
}
	
	/* Light mode */
	.cta.light {
		background: linear-gradient(135deg, 
			#eff6ff 0%,    /* 50 */
			#dceafd 25%,   /* 100 */
			#c1dcfc 75%,   /* 200 */
			#96c6fa 100%   /* 300 */
		);
	}
	
	.cta__body {
		@apply flex flex-col items-center text-center w-full;
	}
	
	.cta__heading {
		@apply mb-8 text-pretty text-center text-2xl lg:text-4xl w-full;
		color: #edca60;
	}
	
	.cta__text {
		@apply mb-2 max-w-4xl text-lg text-center leading-relaxed mx-auto;
		color: #eff6ff;
	}

</style>