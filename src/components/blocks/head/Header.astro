---
// Imports
import { ClientRouter } from 'astro:transitions'
// Partials
import Seo from './partials/Seo.astro'
// Data
import { configData } from '../../../config/config'
import type { SeoMetadata } from '../../../config/seo'

import { googleAnalyticsMeasurementID } from '../../../config/analytics'
import { googleTagManagerID } from '../../../config/analytics'
import { googleSiteVerification } from '../../../config/analytics'

// Props
type Props = {
	meta: SeoMetadata
}
// Page Metadata
const { meta } = Astro.props
---

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<Seo
	<Seo
		title={meta.title ?? configData.siteTitle}
		description={meta.description ?? configData.siteDescription}
		ogImage={meta.ogImage ?? configData.ogImage}
		canonicalUrl={meta.canonicalUrl}
		noindex={meta.noindex}
		ogType={meta.ogType}
		keywords={meta.keywords}
		siteName={meta.siteName}
		structuredData={meta.structuredData}
	/>
	<link rel="sitemap" href="/sitemap-index.xml" />
	<meta name="generator" content={Astro.generator} />
	<meta name="theme-color" content="#134e4a" />
	<ClientRouter fallback="swap" />
	{googleSiteVerification && <meta name="google-site-verification" content={googleSiteVerification} />}
</head>
