---
// Team Asia Section
// ------------
// Description: Team members showcase with profile cards

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'

// Team data
const teamMembers = [
	{
		name: 'Mr. Milton Tan',
		credentials: 'B.Com (VPM), NZ, MRICS',
		location: 'Singapore (HQ)',
		position: 'Founder and MD',
		specialization: 'Plant and Machinery Valuation',
		image: null // placeholder for now
	},
	{
		name: 'Mr. Milton Tan',
		credentials: 'MRICS',
		location: 'Malaysia',
		position: 'Managing Director',
		specialization: 'Valuation and Advisory, Asia',
		image: null
	},
	{
		name: 'Mr. Ratchaphum Jongpakdee',
		credentials: 'MRICS',
		location: 'Thailand',
		position: 'Managing Director',
		specialization: 'Real Estate Valuation and Advisory',
		image: null
	},
	{
		name: 'Mr. Sorn Seap',
		credentials: 'CVEA',
		location: 'Cambodia',
		position: 'Managing Director',
		specialization: 'Real Estate Valuation and Advisory',
		image: null
	},
	{
		name: 'Ms. Huynh Ngoc Thuy Huong',
		credentials: 'MRICS',
		location: 'Vietnam',
		position: 'Chief Valuer',
		specialization: 'Real Estate Valuation and Advisory',
		image: null
	},
	{
		name: 'Mr. Ratchaphum Jongpakdee',
		credentials: 'MRICS',
		location: 'Laos',
		position: 'Managing Director',
		specialization: 'Real Estate Valuation and Advisory',
		image: null
	}
]

// Props
type Props = {
	classes?: string
}
const { classes } = Astro.props;
---

<div class={`bg-neutral-800 ${classes || ''}`} id="team">
	<Section classes="py-20">
		<!-- Header -->
		<Row>
			<Col span="12" align="center" classes="mb-16">
				<h2 class="text-3xl lg:text-5xl font-bold text-neutral-50 mb-8">
					Team Asia
				</h2>
				<p class="text-xl text-neutral-50 max-w-2xl mx-auto">
					Meet our experienced professionals across Asia
				</p>
			</Col>
		</Row>

		<!-- Team Grid -->
		<div class="team-grid">
			{
				teamMembers.map((member, index) => (
					<div class="team-card bg-white rounded-2xl p-2 md:p-8 text-center shadow-lg border border-neutral-200 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 h-full">
						<!-- Country Name -->
						<div class="country-header md:mb-4">
							<h3 class="text-lg mt-2 md:text-3xl font-bold text-neutral-800">
								{member.location}
							</h3>
							<div class="w-full mb-6 h-1 bg-primary-400 mx-auto rounded-full"></div>
						</div>

						<!-- Member Info -->
						<div class="member-info md:space-y-2">
							<h4 class="text-base md:text-xl font-bold text-neutral-800 md:pt-4">
								{member.name}
							</h4>
							
							<!-- Position -->
							<div class="text-sm md:text-lg font-semibold text-neutral-800">
								{member.position}
							</div>
							
							<div class="text-xs md:text-sm text-neutral-700 pt-2">
								{member.credentials}
							</div>

							<!-- Specialization -->
							<div class="text-xs md:text-sm text-neutral-700 leading-relaxed">
								{member.specialization}
							</div>
						</div>
					</div>
				))
			}
		</div>
	</Section>
</div>

<style>
	/* Team grid layout */
	.team-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr); /* 2 columns on mobile */
		gap: 2rem 1rem;
	}

	/* Desktop: 3 columns */
	@media (min-width: 1024px) {
		.team-grid {
			grid-template-columns: repeat(3, 1fr);
			gap: 2rem;
		}
	}

	/* Team card styling */
	.team-card {
		position: relative;
		overflow: hidden;
	}

	/* Country header styling */
	.country-header {
		transition: transform 0.3s ease;
	}

	.team-card:hover .country-header {
		transform: translateY(-2px);
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.team-grid {
			gap: 1.5rem 0.75rem;
		}
	}

	/* Dark mode support */
	:global(.dark) .team-card {
		background: rgba(38, 38, 38, 0.95);
		border-color: rgba(115, 115, 115, 0.3);
	}

	:global(.dark) .team-card h3,
	:global(.dark) .team-card h4 {
		color: white;
	}

	:global(.dark) .team-card .text-neutral-800 {
		color: rgba(255, 255, 255, 0.9);
	}

	:global(.dark) .team-card .text-neutral-600 {
		color: rgba(255, 255, 255, 0.7);
	}

	:global(.dark) .team-card .text-neutral-700 {
		color: rgba(255, 255, 255, 0.8);
	}

	:global(.dark) .bg-neutral-300 {
		background-color: rgba(115, 115, 115, 0.5);
	}
</style>