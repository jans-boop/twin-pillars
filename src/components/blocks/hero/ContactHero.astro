---
// Contact Hero Section
// ------------
// Description: A hero section with a contact form and contact information

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Form from '../contact/BasicForm.astro'

// Props
type Props = {
	id?: string
	title?: string
	text?: string
	classes?: string
}
const { id, title, text, classes } = Astro.props
---

<Section id={id} classes={classes}>
	<Row>
		<Col span="6" classes={`self-start space-y-14`}>
			<header class="max-w-xl">
				<h1 set:html={title} />
			</header>
			
			<!-- Get in Touch Section -->
			<div class="bg-white dark:bg-neutral-900 rounded-2xl p-6 shadow-lg max-w-xl">
				<h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6">Get in Touch with our valuation experts</h3>
				
				<div class="space-y-4">
					<!-- Phone -->
					<div class="flex items-center space-x-4">
						<div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center flex-shrink-0">
							<svg class="w-6 h-6 text-blue-800 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
							</svg>
						</div>
						<span class="text-lg text-gray-900 dark:text-white font-medium">+65 81811835</span>
					</div>

					<!-- Location -->
					<div class="flex items-center space-x-4">
						<div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center flex-shrink-0">
							<svg class="w-6 h-6 text-blue-800 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
							</svg>
						</div>
						<span class="text-lg text-gray-900 dark:text-white font-medium">Singapore (Headquarters)</span>
					</div>
				</div>
			</div>

			<!-- Follow Us Section -->
			<div class="bg-white dark:bg-neutral-900 rounded-2xl p-6 shadow-lg max-w-xl">
				<h3 class="text-xl font-bold text-gray-900 dark:text-white mb-">Follow Us</h3>
				<p class="text-gray-600 dark:text-gray-300 mb-6">Visit our social media for latest project highlights</p>
				
				<div class="flex flex-col sm:flex-row gap-4">
					<!-- Facebook -->
					<a href="https://www.facebook.com/twinpillars.asia/" class="flex items-center space-x-3 px-6 py-3 border border-gray-300 dark:border-neutral-700 rounded-xl hover:bg-gray-50 dark:hover:bg-neutral-800 transition-colors group">
						<svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
							<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
						</svg>
						<span class="text-gray-900 dark:text-white font-medium">Facebook</span>
					</a>

					<!-- LinkedIn -->
					<a href="https://www.linkedin.com/company/twinpillars" class="flex items-center space-x-3 px-6 py-3 border border-gray-300 dark:border-neutral-700 rounded-xl hover:bg-gray-50 dark:hover:bg-neutral-800 transition-colors group">
						<svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
						<span class="text-gray-900 dark:text-white font-medium">LinkedIn</span>
					</a>
				</div>
			</div>
		</Col>
		<Col span="6" classes="relative">
			<Form classes="max-w-xl" />
		</Col>
	</Row>
</Section>