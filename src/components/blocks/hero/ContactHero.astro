---
// Contact Hero Section
// ------------
// Description: A hero section with a contact form and contact information

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Form from '../contact/BasicForm.astro'

// Props
type Props = {
	id?: string
	title?: string
	text?: string
	classes?: string
}
const { id, title, text, classes } = Astro.props
---

<Section id="contact" classes={`bg-white ${classes || ''}`}>
	<Form classes="max-w-8xl !rounded-2xl !shadow-lg" />
</Section>

