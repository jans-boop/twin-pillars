---
// Home page CTA Section
// ------------
// Description: A hero section with background image overlay and prominent centered text

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Button from '../../ui/Button.astro'

// Content
// - Hero Image
import heroImage from '../../../assets/hero-01.png'

---

<!-- Break out of any container constraints -->
<div class="relative overflow-hidden" style="width: 100vw; margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%);">
	<!-- Background Image with Overlay -->
	<div class="absolute inset-0 z-0">
		<Image
			src={heroImage}
			alt=""
			class="w-full h-full object-cover"
			format="webp"
		/>
		<!-- Dark overlay for better text readability -->
		<div class="absolute inset-0 bg-black bg-opacity-10"></div>
		<!-- Gradient overlay for professional look -->
		<div class="absolute inset-0 bg-gradient-to-r from-white-900/50 to-transparent"></div>
	</div>

	<!-- Content -->
	<div class="relative z-10 py-60 lg:py-112">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center">
				<h1 class="text-5xl md:text-5xl lg:text-7xl font-bold text-white mb-6 leading-tight" style="text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.5);">
					Your One-Stop 
					<span class="text-primary-500" style="text-shadow: 2px 4px 8px rgba(46, 43, 43, 0.8), 1px 2px 4px rgba(0, 0, 0, 0.6);">Valuation</span> 
					Partner
				</h1>

				<p class="text-xl md:text-2xl text-gray-100 max-w-4xl mx-auto mb-8 leading-relaxed" style="text-shadow: 1px 2px 4px rgba(0, 0, 0, 0.7);">
					Skilled valuation professionals unlocking asset value to drive business growth
				</p>
			</div>
		</div>
	</div>
</div>