---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
// - UI
import Feature from '../components/blocks/features/MEVFeatureList.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

import { absoluteUrl } from '../config/seo'

// Content
// - SEO
const seo = {
	title: 'Machinery and Equipment Valuation Specialists | Twin Pillars',
	description:
		'Asia-wide machinery and equipment valuation expertise covering standalone assets and complex facilities, delivered by Twin Pillars.',
	path: '/machinery-and-equipment-valuation',
	keywords: [
		'machinery valuation experts',
		'plant and equipment appraisal',
		'industrial asset valuation Asia',
		'manufacturing facility valuation'
	],
	structuredData: [
		{
			'@context': 'https://schema.org',
			'@type': 'Service',
			name: 'Machinery and Equipment Valuation',
			description:
				'Valuation of plant, machinery, and industrial equipment for insurance, financial reporting, and transaction support.',
			provider: {
				'@type': 'Organization',
				name: 'Twin Pillars',
				url: absoluteUrl('/')
			},
			areaServed: ['Singapore', 'Asia'],
			serviceType: 'Machinery and equipment valuation services',
			url: absoluteUrl('/machinery-and-equipment-valuation')
		}
	]
}

// - Page Header
const header = {
	title: '<strong>Machinery and Equipment Valuation</strong>',
	text: 'Unleash the True Value of Your Assets'
}
---
<Layout seo={seo}>
	<Hero title={header.title} text={header.text} />
	
	{/* First section with full-width background */}
	<div class="bg-white">
		<Section>
			<Row>
				<Col span="12" align="center" classes="max-w-6xl mx-auto">
					<div class="text-lg">
						<h3 class="text-xl text-neutral-800 font-semibold mb-6">Leading Expertise in Asia</h3>
						<p class="text-lg text-neutral-700">
							In today's dynamic industrial landscape, understanding the precise value of your plant and machinery is a strategic imperative. Twin Pillars stands as the leading expert in Plant and Machinery valuation across Asia, serving a prestigious clientele including private entities, listed companies, and government organizations within the manufacturing and utilities sectors.
						</p>
					</div>
				</Col>
			</Row>
		</Section>
	</div>

	{/* Second section with full-width background */}
	<div class="bg-gray-50">
		<Section>
			<Row>
				<Col span="12" align="center" classes="max-w-6xl mx-auto">
					<div class="text-lg">
						<h3 class="text-xl text-neutral-800 font-semibold mb-6">Comprehensive Asset Coverage</h3>
						<p class="text-lg text-neutral-700">
							Our unparalleled expertise extends to valuing an incredibly diverse spectrum of assets, from individual, standalone machines to entire, complex process manufacturing facilities. This includes critical infrastructure such as power plants, advanced telecommunication facilities, desalination plants and sophisticated high-tech manufacturing complexes. With experience spanning over 100 different industries, we bring deep, nuanced knowledge to every assignment.
						</p>
					</div>
				</Col>
			</Row>
		</Section>
	</div>

	<Feature />
	<CTA />
</Layout>