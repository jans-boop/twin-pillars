---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
// - UI
import Feature from '../components/blocks/features/BVFeatureList.astro'
import Feature2 from '../components/blocks/features/BVFeatureList2.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

import { absoluteUrl } from '../config/seo'

// Content
const seo = {
	title: 'Business Valuation Services in Asia | Twin Pillars',
	description:
		'Independent business valuation services for mergers, IPOs, financial reporting, and strategic planning delivered across Asia by Twin Pillars.',
	path: '/business-valuation',
	keywords: [
		'business valuation Asia',
		'mergers and acquisitions valuation',
		'IFRS valuation advisory',
		'company valuation Singapore'
	],
	structuredData: [
		{
			'@context': 'https://schema.org',
			'@type': 'Service',
			name: 'Business Valuation',
			description:
				'Professional valuation of businesses for mergers, acquisitions, IPO preparation, and financial reporting compliance.',
			provider: {
				'@type': 'Organization',
				name: 'Twin Pillars',
				url: absoluteUrl('/')
			},
			areaServed: ['Singapore', 'Asia'],
			serviceType: 'Business valuation services',
			url: absoluteUrl('/business-valuation'),
			offers: {
				'@type': 'Offer',
				availability: 'https://schema.org/InStock',
				priceSpecification: {
					'@type': 'PriceSpecification',
					priceCurrency: 'SGD'
				}
			}
		}
	]
}

// - Page Header
const header = {
	title: '<strong>Business Valuation</strong>',
	text: 'Unlock Your Business\'s True Potential'
}
---

<Layout seo={seo}>
	<Hero title={header.title} text={header.text} />
	<Section id="features">
		<Row>
			<Col span="12" align="center" classes=" max-w-6xl mx-auto">
				<div class="text-lg space-y-16">
					<div>
						<h3 class="text-xl text-neutral-800 font-semibold">Comprehensive Valuation Excellence</h3>
						<p class="text-lg text-neutral-700">
							In today's dynamic market, understanding the economic value of your business is more critical than ever. At Twin Pillars, with our extensive affiliates in Asia, we provide comprehensive Business Valuation services designed to unveil the true worth of your company, empowering you to make informed, strategic decisions.

						</p>
					</div>
				</div>
			</Col>
		</Row>
	</Section>
	<Feature />
	<Feature2 />
	<CTA />
</Layout>
