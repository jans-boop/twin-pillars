---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/HomeCTA.astro'
import Features from '../components/blocks/features/FeatureCards.astro'
import HighlightBlocks from '../components/blocks/highlights/HightlightRows.astro'
import FormHero from '../components/blocks/hero/ContactHero.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'
import Social from '../components/blocks/hero/SocialMedia.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'
import { absoluteUrl } from '../config/seo'

// Content
// - Testimonial background
import testimonialBackground from '../assets/cta-light-bg.png'
// - SEO
const seo = {
	title: 'Twin Pillars | Asset Valuation Experts in Asia',
	description:
		'Twin Pillars delivers business, machinery, and real estate valuation expertise to organizations across Asia from our Singapore headquarters.',
	keywords: [
		'asset valuation Asia',
		'business valuation experts',
		'machinery appraisal Singapore',
		'real estate valuation consultants'
	],
	structuredData: [
		{
			'@context': 'https://schema.org',
			'@type': 'ProfessionalService',
			name: 'Twin Pillars',
			description:
				'Twin Pillars provides business, machinery, and real estate valuation services with experienced professionals across Asia.',
			url: absoluteUrl('/'),
			areaServed: ['Singapore', 'Asia'],
			serviceType: [
				'Business valuation',
				'Machinery and equipment valuation',
				'Real estate valuation'
			],
			logo: absoluteUrl('/logo-w-bg.svg'),
			contactPoint: {
				'@type': 'ContactPoint',
				telephone: '+65 81811835',
				contactType: 'Customer Service'
			}
		}
	]
}

const header = {
	title: '<strong>Contact Us </strong>',
	text: "Get in touch with our valuation experts"
}
---

<Layout seo={seo}>
	<Hero />
	<ContactCards bg={testimonialBackground.src} />
	<Features />
	<HighlightBlocks />
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<Social />
</Layout>
