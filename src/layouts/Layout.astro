---
// Imports
// Components
import NavigationBar from '../components/ui/NavigationBar.astro'
import Main from '../components/ui/Main.astro'
import Footer from '../components/ui/Footer.astro'
import Header from '../components/blocks/head/Header.astro'
// Scripts
import Scriprs from '../components/scripts/LocalScripts.astro'
// Styles
import '../styles/global.css'
// Fonts
import '@fontsource-variable/inter'

// Data
import { configData } from '../config/config'
import { buildSeoMetadata } from '../config/seo'
import type { SeoOptions } from '../config/seo'

// Props
type Props = {
	title?: string
	description?: string
	ogImage?: string
	noindex?: boolean
	classes?: string
	canonical?: string
	keywords?: string[]
	ogType?: 'website' | 'article'
	seo?: SeoOptions
}
// Page Metadata
const { title, description, ogImage, noindex, classes, canonical, keywords, ogType, seo } = Astro.props

const seoOptions: SeoOptions = {
	...(seo ?? {})
}

if (title) seoOptions.title = title
if (description) seoOptions.description = description
if (ogImage) seoOptions.image = ogImage
if (typeof noindex === 'boolean') seoOptions.noindex = noindex
if (canonical) seoOptions.canonical = canonical
if (keywords) seoOptions.keywords = keywords
if (ogType) seoOptions.type = ogType

if (!seoOptions.path) {
	seoOptions.path = Astro.url.pathname || '/'
}

const meta = buildSeoMetadata(seoOptions)
---

<!doctype html>
<html lang="en" class="scroll-animation mode-light relative">
	<Header meta={meta} />
	<body
		class:list={[
			{ ['mode-' + `${configData.mode}`]: configData.mode },
			{ ['scroll-animation']: configData.scrollAnimations },
			{ [`${classes}`]: classes }
		]}
	>
		<NavigationBar />
		<Main>
			<slot />
		</Main>
		<Footer />
		<Scriprs />
	</body>
</html>
